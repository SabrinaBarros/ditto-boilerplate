.card
  background-color #f5f5f5
  border-radius 4px
  box-shadow 0px 0px 8px 2px rgba(0, 0, 0, .2)
  display flex
  flex-basis 250px
  flex-direction column
  flex-grow 1
  margin 8px
  padding 8px

.card__title
  color #7400b8
  font-size 24px
  font-weight 700
  margin 8px

.card__text
  color #555c65
  font-size 16px
  height 100%
  margin 8px

.card__footer
  text-align end

.card__link
  align-items center
  align-self flex-end
  bottom 0
  color #6930c3
  display inline-flex
  font-size 14px
  padding 8px
  right 0
  text-decoration none

.card__icon
  fill #6930c3
  width 20px